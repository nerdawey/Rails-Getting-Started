<% cache @product do %>
  <h1><%= @product.name %></h1>

  <% if current_user %>
    <%= link_to "Edit", edit_product_path(@product) %>
    <%= link_to "Delete", product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  <% end %>

  <%= link_to "Back", products_path %>
<% end %>