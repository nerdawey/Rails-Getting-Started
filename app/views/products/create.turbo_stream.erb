<%= turbo_stream.prepend "products" do %>
  <%= turbo_frame_tag dom_id(@product) do %>
    <div>
      <%= link_to @product.name, product_path(@product.id) %>
      <% if current_user %>
        <%= link_to t("products.index.edit"), edit_product_path(@product) %>
        <%= link_to t("products.index.delete"), product_path(@product), data: { turbo_method: :delete, turbo_confirm: t("confirm_delete") } %>
      <% end %>
    </div>
  <% end %>
<% end %>

<%= turbo_stream.update "new_product" do %>
  <%= link_to t("products.index.new_product"), new_product_path %>
<% end %>

<%= turbo_stream.visit product_url(@product) %>

